{
  "name": "jiuyao-crawler",
  "version": "1.0.0",
  "description": "A comic crawler",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs",
    "default": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "postinstall": "simple-git-hooks",
    "dev": "tsx src/index.ts",
    "dev:zip": "tsx src/zip.ts",
    "start": "node dist/index.mjs",
    "start:zip": "node dist/zip.mjs",
    "build": "rimraf dist && rollup -c",
    "build:dts": "rimraf temp && tsc -p tsconfig.build.json && rollup -c rollup.dts.config.js",
    "clean": "rimraf dist temp .eslintcache .stats",
    "test": "vitest",
    "pub": "pnpm build && pnpm publish --no-git-checks",
    "check": "tsc --incremental --noEmit",
    "lint": "eslint --cache --ignore-path .gitignore .",
    "lint:fix": "eslint --cache --fix --ignore-path .gitignore .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commit": "cz"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "lint-staged": {
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,cjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justorez/node-ts-starter.git"
  },
  "keywords": [],
  "author": "justorez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justorez/node-ts-starter/issues"
  },
  "homepage": "https://github.com/justorez/node-ts-starter#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.16.5",
    "@types/progress": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.6.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.10",
    "picocolors": "^1.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "rollup": "^4.21.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.12.2",
    "cheerio": "^1.0.0",
    "figures": "^6.1.0",
    "ora": "^8.1.0",
    "p-limit": "^6.1.0",
    "progress": "^2.0.3"
  }
}
